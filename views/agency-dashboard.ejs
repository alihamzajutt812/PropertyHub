<!DOCTYPE html>
<html>
<head>
  <title><%= pageTitle %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      --primary-green: #22c55e;
      --dark-green: #16a34a;
      --light-green: #f0f9f4;
      --pure-white: #ffffff;
      --off-white: #fafafa;
      --border-green: #d1fae5;
    }

    body {
      background: var(--light-green);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 20px;
    }

    h2 {
      color: var(--dark-green);
      font-weight: 700;
      margin-bottom: 30px;
      font-size: 2.8rem;
      text-align: center;
    }

    h4 {
      color: var(--dark-green);
      font-weight: 600;
      margin: 40px 0 25px 0;
      font-size: 1.6rem;
      position: relative;
      padding-left: 20px;
    }

    h4::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 30px;
      background: var(--primary-green);
      border-radius: 2px;
    }

    .btn {
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      text-transform: uppercase;
      letter-spacing: 0.8px;
      border: 2px solid transparent;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      position: relative;
      overflow: hidden;
    }

    .btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s;
    }

    .btn:hover::before {
      left: 100%;
    }

    .btn-success {
      background: var(--primary-green);
      border-color: var(--primary-green);
      color: white;
      padding: 14px 28px;
      font-size: 16px;
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.2);
    }

    .btn-success:hover {
      background: var(--dark-green);
      border-color: var(--dark-green);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(34, 197, 94, 0.3);
    }

    .btn-info {
      background: var(--primary-green);
      border-color: var(--primary-green);
      color: white;
      padding: 14px 28px;
      font-size: 16px;
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.2);
    }

    .btn-info:hover {
      background: var(--dark-green);
      border-color: var(--dark-green);
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(34, 197, 94, 0.3);
    }

    .btn-primary {
      background: var(--primary-green);
      border-color: var(--primary-green);
      color: white;
    }

    .btn-primary:hover {
      background: var(--dark-green);
      border-color: var(--dark-green);
      transform: translateY(-2px);
    }

    .btn-danger {
      background: #dc2626;
      border-color: #dc2626;
      color: white;
    }

    .btn-danger:hover {
      background: #b91c1c;
      border-color: #b91c1c;
      transform: translateY(-2px);
    }

    .action-buttons-container {
      display: flex;
      gap: 20px;
      justify-content: center;
      margin-bottom: 40px;
      flex-wrap: wrap;
    }

    .welcome-section {
      background: var(--pure-white);
      border-radius: 20px;
      padding: 40px;
      margin-bottom: 35px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      border: 2px solid var(--border-green);
      position: relative;
    }

    .welcome-section::after {
      content: 'üè¢';
      position: absolute;
      top: 25px;
      right: 40px;
      font-size: 3rem;
      opacity: 0.1;
    }

    .table-container {
      background: var(--pure-white);
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
      overflow: hidden;
      border: 2px solid var(--border-green);
      position: relative;
      margin-bottom: 40px;
    }

    .table-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--primary-green);
    }

    .table {
      margin: 0;
      border-collapse: separate;
      border-spacing: 0;
    }

    .table thead th {
      background: var(--light-green);
      color: var(--dark-green);
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.8px;
      padding: 22px 18px;
      font-size: 14px;
      border: none;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid var(--border-green);
      background: var(--pure-white);
    }

    .table tbody tr:hover {
      background: var(--off-white);
      transform: translateX(5px);
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.1);
    }

    .table tbody td {
      padding: 20px 18px;
      vertical-align: middle;
      border: none;
      color: #374151;
      font-weight: 500;
      font-size: 15px;
    }

    .table tbody tr:last-child {
      border-bottom: none;
    }

    .action-buttons {
      display: flex;
      gap: 10px;
      align-items: center;
      flex-wrap: wrap;
    }

    .btn-sm {
      padding: 10px 18px;
      font-size: 13px;
      border-radius: 10px;
      min-width: 75px;
      font-weight: 600;
    }

    .price-cell {
      font-weight: 700;
      color: var(--dark-green);
      font-size: 17px;
      background: var(--light-green);
      border-radius: 8px;
      padding: 8px 12px !important;
    }

    .status-cell {
      font-weight: 600;
      padding: 8px 15px !important;
      border-radius: 20px;
      text-align: center;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      font-size: 12px;
    }

    .date-cell {
      font-family: 'Courier New', monospace;
      font-size: 14px;
      color: #6b7280;
    }

    /* Section spacing */
    .properties-section,
    .projects-section {
      margin-bottom: 50px;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
      .container {
        padding: 15px;
      }

      h2 {
        font-size: 2.3rem;
      }

      .action-buttons-container {
        flex-direction: column;
        align-items: center;
        gap: 15px;
      }

      .btn-success,
      .btn-info {
        width: 280px;
        padding: 16px 24px;
      }
    }

    @media (max-width: 768px) {
      h2 {
        font-size: 2rem;
      }

      h4 {
        font-size: 1.4rem;
        text-align: center;
        padding-left: 0;
      }

      h4::before {
        display: none;
      }

      .table-container {
        border-radius: 15px;
        overflow-x: auto;
        box-shadow: 0 15px 35px rgba(34, 197, 94, 0.1);
      }

      .table {
        min-width: 700px;
      }

      .table thead th,
      .table tbody td {
        padding: 15px 10px;
        font-size: 13px;
      }

      .action-buttons {
        flex-direction: column;
        gap: 8px;
        min-width: 130px;
      }

      .btn-sm {
        width: 100%;
        margin: 3px 0;
      }

      .welcome-section {
        padding: 30px 25px;
        text-align: center;
        border-radius: 20px;
      }

      .welcome-section::after {
        display: none;
      }

      .btn-success,
      .btn-info {
        width: 100%;
        max-width: 350px;
      }
    }

    @media (max-width: 480px) {
      h2 {
        font-size: 1.8rem;
      }

      .table {
        min-width: 650px;
      }

      .table thead th,
      .table tbody td {
        padding: 12px 8px;
        font-size: 12px;
      }

      .welcome-section {
        padding: 25px 20px;
      }

      .action-buttons-container {
        margin-bottom: 30px;
      }
    }

    /* Loading animations */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideIn {
      from {
        opacity: 0;
        transform: translateX(-30px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    .table tbody tr {
      animation: fadeInUp 0.6s ease forwards;
    }

    .table tbody tr:nth-child(even) {
      animation-delay: 0.1s;
    }

    .table tbody tr:nth-child(odd) {
      animation-delay: 0.2s;
    }

    .table-container {
      animation: slideIn 0.8s ease forwards;
    }

    .properties-section .table-container {
      animation-delay: 0.2s;
    }

    .projects-section .table-container {
      animation-delay: 0.4s;
    }

    /* Focus indicators */
    .btn:focus-visible {
      outline: 3px solid var(--primary-green);
      outline-offset: 3px;
    }

    /* High contrast mode */
    @media (prefers-contrast: high) {
      .table-container,
      .welcome-section {
        border: 4px solid var(--dark-green);
      }
    }

    /* Reduced motion */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }

    /* Empty state */
    .empty-state {
      text-align: center;
      padding: 80px 30px;
      color: #9ca3af;
    }

    .empty-state h5 {
      color: var(--dark-green);
      margin-bottom: 20px;
      font-size: 1.3rem;
    }

    .empty-state p {
      font-size: 16px;
      margin-bottom: 0;
    }
  </style>
</head>
<body class="p-4">
  <div class="container">
    <div class="welcome-section">
      <h2>Welcome <%= user.name %></h2>
    </div>

    <div class="action-buttons-container">
      <a href="/agency/properties/new" class="btn btn-success mb-3">üè† Add New Property</a>
      <a href="/agency/projects/new" class="btn btn-info mb-3 ms-2">üèóÔ∏è Add New Project</a>
    </div>

    <div class="properties-section">
      <h4>My Properties</h4>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Type</th>
              <th>Location</th>
              <th>Price</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% properties.forEach(p => { %>
              <tr>
                <td><%= p.title %></td>
                <td><%= p.type %></td>
                <td><%= p.location %></td>
                <td class="price-cell">Rs. <%= p.price %></td>
                <td>
                  <div class="action-buttons">
                    <a href="/agency/properties/edit/<%= p._id %>" class="btn btn-sm btn-primary">Edit</a>
                    <form action="/agency/properties/delete/<%= p._id %>" method="POST" style="display:inline;">
                      <button class="btn btn-sm btn-danger" onclick="return confirm('Delete property?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="projects-section">
      <h4 class="mt-5">My Projects</h4>
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Location</th>
              <th>Launch Date</th>
              <th>Completion Date</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(proj => { %>
              <tr>
                <td><%= proj.title %></td>
                <td><%= proj.location %></td>
                <td class="date-cell"><%= proj.launchDate ? new Date(proj.launchDate).toDateString() : 'N/A' %></td>
                <td class="date-cell"><%= proj.completionDate ? new Date(proj.completionDate).toDateString() : 'N/A' %></td>
                <td class="status-cell"><%= proj.status %></td>
                <td>
                  <div class="action-buttons">
                    <a href="/agency/projects/edit/<%= proj.slug %>" class="btn btn-sm btn-primary">Edit</a>
                    <form action="/agency/projects/delete/<%= proj.slug %>" method="POST" style="display:inline;">
                      <button class="btn btn-sm btn-danger" onclick="return confirm('Delete project?')">Delete</button>
                    </form>
                  </div>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
</html>