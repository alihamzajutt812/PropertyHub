<!DOCTYPE html>
<html>
<head>
  <title><%= pageTitle %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-4">
  <h2>Welcome <%= user.name %> üëã</h2>

  <a href="/agency/properties/new" class="btn btn-success mb-3">‚ûï Add New Property</a>
  <a href="/agency/projects/new" class="btn btn-info mb-3 ms-2">üèóÔ∏è Add New Project</a>

  <h4>My Properties</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Type</th>
        <th>Location</th>
        <th>Price</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% properties.forEach(p => { %>
        <tr>
          <td><%= p.title %></td>
          <td><%= p.type %></td>
          <td><%= p.location %></td>
          <td>Rs. <%= p.price %></td>
          <td>
            <a href="/agency/properties/edit/<%= p._id %>" class="btn btn-sm btn-primary">Edit</a>
            <form action="/agency/properties/delete/<%= p._id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Delete property?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <h4 class="mt-5">My Projects</h4>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Location</th>
        <th>Launch Date</th>
        <th>Completion Date</th>
        <th>Status</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(proj => { %>
        <tr>
          <td><%= proj.title %></td>
          <td><%= proj.location %></td>
          <td><%= proj.launchDate ? new Date(proj.launchDate).toDateString() : 'N/A' %></td>
          <td><%= proj.completionDate ? new Date(proj.completionDate).toDateString() : 'N/A' %></td>
          <td><%= proj.status %></td>
          <td>
            <a href="/agency/projects/edit/<%= proj.slug %>" class="btn btn-sm btn-primary">Edit</a>
            <form action="/agency/projects/delete/<%= proj.slug %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Delete project?')">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>