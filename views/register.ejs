<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Register' %></title>
  <link rel="stylesheet" href="/public/css/javascript.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    
    :root {
      --primary-green: #2d5016;
      --secondary-green: #4CAF50;
      --dark-green: #1a3009;
      --light-green: #81c784;
      --gradient-primary: linear-gradient(135deg, #2d5016 0%, #4CAF50 100%);
      --gradient-light: linear-gradient(135deg, rgba(45, 80, 22, 0.1), rgba(76, 175, 80, 0.1));
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: #ffffff;
      position: relative;
      overflow-x: hidden;
      min-height: 100vh;
      line-height: 1.6;
    }

    /* Animated Background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 30%, rgba(45, 80, 22, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(76, 175, 80, 0.03) 0%, transparent 50%),
        linear-gradient(45deg, transparent 48%, rgba(45, 80, 22, 0.01) 49%, rgba(45, 80, 22, 0.01) 51%, transparent 52%);
      background-size: 600px 600px, 400px 400px, 30px 30px;
      animation: moveBackground 25s ease-in-out infinite;
      z-index: -1;
    }

    @keyframes moveBackground {
      0%, 100% { transform: translate(0, 0); }
      25% { transform: translate(-5px, -5px); }
      50% { transform: translate(5px, 5px); }
      75% { transform: translate(-3px, 3px); }
    }

    .main-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      position: relative;
    }

    .register-wrapper {
      width: 100%;
      max-width: 900px;
      position: relative;
    }

    .register-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 24px;
      padding: 2rem;
      box-shadow: 
        0 20px 40px rgba(45, 80, 22, 0.08),
        0 10px 25px rgba(0, 0, 0, 0.04),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.3);
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
      width: 100%;
    }

    .register-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--gradient-primary);
      border-radius: 24px 24px 0 0;
    }

    .form-header {
      text-align: center;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
    }

    .brand-icon {
      width: 50px;
      height: 50px;
      background: var(--gradient-primary);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 20px rgba(45, 80, 22, 0.2);
      transition: transform 0.3s ease;
      flex-shrink: 0;
    }

    .brand-icon:hover {
      transform: scale(1.05);
    }

    .brand-icon i {
      font-size: 1.5rem;
      color: white;
    }

    .brand-text {
      text-align: left;
      flex: 1;
      min-width: 0;
    }

    .brand-title {
      font-size: clamp(1.5rem, 4vw, 1.8rem);
      font-weight: 700;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.2rem;
      line-height: 1.2;
    }

    .brand-subtitle {
      color: #666;
      font-size: clamp(0.85rem, 2vw, 0.9rem);
      font-weight: 400;
    }

    .form-section {
      position: relative;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      margin-bottom: 1.2rem;
    }

    .form-group {
      position: relative;
    }

    .form-group.full-width {
      grid-column: 1 / -1;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: var(--primary-green);
      margin-bottom: 0.5rem;
      font-size: clamp(0.85rem, 2vw, 0.9rem);
      letter-spacing: 0.3px;
    }

    .input-group {
      position: relative;
      display: flex;
      align-items: center;
    }

    .input-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
      font-size: 1rem;
      z-index: 3;
      transition: all 0.3s ease;
    }

    .form-control,
    .form-select {
      width: 100%;
      padding: 1rem 1rem 1rem 2.8rem;
      border: 2px solid #f0f4f8;
      border-radius: 12px;
      font-size: clamp(0.9rem, 2vw, 0.95rem);
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      outline: none;
      color: #333;
      font-weight: 500;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: var(--secondary-green);
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
      transform: translateY(-1px);
    }

    .form-control:focus + .input-icon,
    .form-select:focus + .input-icon {
      color: var(--secondary-green);
      transform: translateY(-50%) scale(1.05);
    }

    .form-control::placeholder {
      color: #aaa;
      font-weight: 400;
    }

    .btn-register {
      width: 100%;
      padding: 1.1rem;
      background: var(--gradient-primary);
      border: none;
      border-radius: 12px;
      color: white;
      font-weight: 600;
      font-size: clamp(0.95rem, 2vw, 1rem);
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      margin: 1.5rem 0 1rem;
      box-shadow: 0 6px 20px rgba(45, 80, 22, 0.25);
      letter-spacing: 0.3px;
    }

    .btn-register::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-register:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(45, 80, 22, 0.35);
    }

    .btn-register:hover::before {
      left: 100%;
    }

    .agency-fields {
      background: linear-gradient(135deg, rgba(45, 80, 22, 0.02), rgba(76, 175, 80, 0.02));
      border: 2px solid rgba(76, 175, 80, 0.1);
      border-radius: 16px;
      padding: 1.5rem;
      margin: 1.5rem 0;
      position: relative;
      overflow: hidden;
      transition: all 0.4s ease;
      opacity: 0;
      transform: translateY(-10px);
      max-height: 0;
      padding-top: 0;
      padding-bottom: 0;
    }

    .agency-fields::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: var(--gradient-primary);
      border-radius: 16px 16px 0 0;
    }

    .agency-fields.show {
      opacity: 1;
      transform: translateY(0);
      max-height: 500px;
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
    }

    .agency-title {
      font-size: clamp(1rem, 2.5vw, 1.1rem);
      font-weight: 600;
      color: var(--primary-green);
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
    }

    .agency-title i {
      margin-right: 0.6rem;
      font-size: 1.2rem;
      color: var(--secondary-green);
    }

    .login-link {
      text-align: center;
      color: #666;
      font-size: clamp(0.85rem, 2vw, 0.9rem);
      font-weight: 500;
    }

    .login-link a {
      color: var(--primary-green);
      text-decoration: none;
      font-weight: 600;
      position: relative;
      transition: all 0.3s ease;
    }

    .login-link a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--gradient-primary);
      transition: width 0.3s ease;
    }

    .login-link a:hover::after {
      width: 100%;
    }

    .login-link a:hover {
      color: var(--secondary-green);
    }

    .alert-danger {
      background: linear-gradient(135deg, #fff5f5, #fed7d7);
      border: 2px solid #feb2b2;
      border-radius: 12px;
      color: #c53030;
      padding: 1rem;
      margin-bottom: 1.2rem;
      border-left: 4px solid #e53e3e;
      font-size: clamp(0.85rem, 2vw, 0.9rem);
      word-wrap: break-word;
    }

    .alert-danger i {
      margin-right: 0.6rem;
      font-size: 1rem;
    }

    /* Password requirements display */
    .password-requirements {
      background: rgba(45, 80, 22, 0.05);
      border: 1px solid rgba(76, 175, 80, 0.2);
      border-radius: 8px;
      padding: 0.8rem;
      margin-top: 0.5rem;
      font-size: clamp(0.75rem, 1.5vw, 0.8rem);
      color: #666;
    }

    .password-requirements ul {
      margin: 0;
      padding-left: 1.2rem;
    }

    .password-requirements li {
      margin-bottom: 0.2rem;
    }

    /* File input custom styling */
    .file-input-wrapper {
      position: relative;
      overflow: hidden;
      display: inline-block;
      width: 100%;
    }

    .form-control[type="file"] {
      position: absolute;
      left: -9999px;
    }

    .file-input-label {
      display: flex;
      align-items: center;
      padding: 1rem;
      border: 2px dashed #ddd;
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.8);
      cursor: pointer;
      transition: all 0.3s ease;
      color: #666;
      font-weight: 500;
      font-size: clamp(0.85rem, 2vw, 0.9rem);
      justify-content: center;
      text-align: center;
    }

    .file-input-label:hover {
      border-color: var(--secondary-green);
      background: rgba(76, 175, 80, 0.05);
      color: var(--primary-green);
    }

    .file-input-label i {
      margin-right: 0.6rem;
      font-size: 1.1rem;
      color: var(--secondary-green);
    }

    /* Enhanced Responsive Design */
    @media (max-width: 992px) {
      .main-container {
        padding: 0.75rem;
      }
      
      .register-wrapper {
        max-width: 700px;
      }
      
      .register-card {
        padding: 1.8rem;
        border-radius: 20px;
      }
      
      .form-row {
        gap: 1.2rem;
      }
      
      .agency-fields {
        padding: 1.3rem;
      }

      .agency-fields.show {
        padding-top: 1.3rem;
        padding-bottom: 1.3rem;
      }
    }

    @media (max-width: 768px) {
      .main-container {
        padding: 0.5rem;
        align-items: flex-start;
        padding-top: 2rem;
        padding-bottom: 2rem;
      }
      
      .register-card {
        padding: 1.5rem;
        border-radius: 20px;
      }
      
      .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .form-header {
        flex-direction: column;
        gap: 0.8rem;
        margin-bottom: 1.2rem;
      }
      
      .brand-text {
        text-align: center;
      }
      
      .agency-fields {
        padding: 1.2rem;
        margin: 1.2rem 0;
      }

      .agency-fields.show {
        padding-top: 1.2rem;
        padding-bottom: 1.2rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.95rem 0.95rem 0.95rem 2.6rem;
      }
      
      .input-icon {
        left: 0.9rem;
        font-size: 0.95rem;
      }
    }

    @media (max-width: 576px) {
      .main-container {
        padding: 0.25rem;
        padding-top: 1rem;
        padding-bottom: 1rem;
      }
      
      .register-card {
        padding: 1.2rem;
        margin: 0.25rem;
        border-radius: 16px;
      }
      
      .brand-icon {
        width: 45px;
        height: 45px;
      }
      
      .brand-icon i {
        font-size: 1.3rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.9rem 0.9rem 0.9rem 2.4rem;
      }
      
      .input-icon {
        left: 0.8rem;
        font-size: 0.9rem;
      }
      
      .btn-register {
        padding: 1rem;
        margin: 1.2rem 0 0.8rem;
      }
      
      .agency-fields {
        padding: 1rem;
        margin: 1rem 0;
      }

      .agency-fields.show {
        padding-top: 1rem;
        padding-bottom: 1rem;
      }
      
      .password-requirements {
        padding: 0.7rem;
      }
      
      .password-requirements ul {
        padding-left: 1rem;
      }
    }

    @media (max-width: 480px) {
      .register-card {
        padding: 1rem;
        margin: 0.125rem;
        border-radius: 14px;
      }
      
      .form-row {
        gap: 0.8rem;
        margin-bottom: 1rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.85rem 0.85rem 0.85rem 2.2rem;
        border-radius: 10px;
      }
      
      .input-icon {
        left: 0.7rem;
        font-size: 0.85rem;
      }
      
      .btn-register {
        padding: 0.9rem;
        border-radius: 10px;
        margin: 1rem 0 0.6rem;
      }
      
      .agency-fields {
        padding: 0.9rem;
        border-radius: 12px;
      }

      .agency-fields.show {
        padding-top: 0.9rem;
        padding-bottom: 0.9rem;
      }
      
      .file-input-label {
        padding: 0.8rem;
        flex-direction: column;
        text-align: center;
      }
      
      .file-input-label i {
        margin-right: 0;
        margin-bottom: 0.3rem;
      }
    }

    @media (max-width: 360px) {
      .main-container {
        padding: 0.125rem;
      }
      
      .register-card {
        padding: 0.8rem;
        margin: 0.125rem;
      }
      
      .brand-icon {
        width: 40px;
        height: 40px;
      }
      
      .brand-icon i {
        font-size: 1.2rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.8rem 0.8rem 0.8rem 2rem;
        font-size: 0.85rem;
      }
      
      .input-icon {
        left: 0.6rem;
        font-size: 0.8rem;
      }
      
      .btn-register {
        padding: 0.85rem;
        font-size: 0.9rem;
      }
    }

    /* Landscape orientation on mobile devices */
    @media (max-width: 768px) and (orientation: landscape) {
      .main-container {
        padding-top: 1rem;
        padding-bottom: 1rem;
      }
      
      .form-header {
        margin-bottom: 1rem;
      }
      
      .form-row {
        margin-bottom: 1rem;
      }
      
      .btn-register {
        margin: 1rem 0 0.8rem;
      }
    }

    /* High DPI displays */
    @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
      .register-card {
        border-width: 0.5px;
      }
    }

    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }

    .btn-register:focus,
    .form-control:focus,
    .form-select:focus {
      outline: 2px solid rgba(76, 175, 80, 0.5);
      outline-offset: 2px;
    }

    /* Focus visible for better keyboard navigation */
    .btn-register:focus-visible,
    .form-control:focus-visible,
    .form-select:focus-visible,
    .file-input-label:focus-visible {
      outline: 2px solid var(--secondary-green);
      outline-offset: 2px;
    }

    /* Ensure text remains readable at all sizes */
    @media (max-width: 320px) {
      .brand-title {
        font-size: 1.4rem;
      }
      
      .brand-subtitle {
        font-size: 0.8rem;
      }
      
      .form-label {
        font-size: 0.8rem;
      }
      
      .form-control,
      .form-select {
        font-size: 0.8rem;
      }
      
      .password-requirements {
        font-size: 0.7rem;
      }
    }
  </style>
</head>
<body>
  <div class="main-container">
    <div class="register-wrapper">
      <div class="register-card">
        <div class="form-header">
          <div class="brand-icon">
            <i class="fas fa-user-plus"></i>
          </div>
          <div class="brand-text">
            <h1 class="brand-title">Join Us Today</h1>
            <p class="brand-subtitle">Create your real estate account</p>
          </div>
        </div>

        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i><%= error %>
          </div>
        <% } %>

        <div class="form-section">
          <form method="POST" action="/register" enctype="multipart/form-data">
            <div class="form-row">
              <div class="form-group">
                <label for="name" class="form-label">Full Name</label>
                <div class="input-group">
                  <input 
                    type="text" 
                    class="form-control" 
                    name="name" 
                    id="name"
                    placeholder="Enter your full name"
                    value="<%= typeof formData !== 'undefined' && formData.name ? formData.name : '' %>"
                    required 
                    autocomplete="name"
                  />
                  <i class="fas fa-user input-icon"></i>
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                  <input 
                    type="email" 
                    class="form-control" 
                    name="email" 
                    id="email"
                    placeholder="Enter your email"
                    value="<%= typeof formData !== 'undefined' && formData.email ? formData.email : '' %>"
                    required 
                    autocomplete="email"
                  />
                  <i class="fas fa-envelope input-icon"></i>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="phone" class="form-label">Phone Number</label>
                <div class="input-group">
                  <input 
                    type="text" 
                    class="form-control" 
                    name="phone" 
                    id="phone"
                    placeholder="Enter phone number"
                    value="<%= typeof formData !== 'undefined' && formData.phone ? formData.phone : '' %>"
                    required 
                    autocomplete="tel"
                  />
                  <i class="fas fa-phone input-icon"></i>
                </div>
              </div>

              <div class="form-group">
                <label for="role" class="form-label">Account Type</label>
                <div class="input-group">
                  <select name="role" class="form-select" id="role" required onchange="toggleAgencyFields()">
                    <option value="agent" <%= typeof formData !== 'undefined' && formData.role === 'agent' ? 'selected' : '' %>>Real Estate Agent</option>
                    <option value="agency" <%= typeof formData !== 'undefined' && formData.role === 'agency' ? 'selected' : '' %>>Real Estate Agency</option>
                  </select>
                  <i class="fas fa-briefcase input-icon"></i>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                  <input 
                    type="password" 
                    class="form-control" 
                    name="password" 
                    id="password"
                    placeholder="Create password"
                    required 
                    autocomplete="new-password"
                  />
                  <i class="fas fa-lock input-icon"></i>
                </div>
                <div class="password-requirements">
                  <strong>Password requirements:</strong>
                  <ul>
                    <li>At least 8 characters long</li>
                    <li>One uppercase letter (A-Z)</li>
                    <li>One lowercase letter (a-z)</li>
                    <li>One number (0-9)</li>
                    <li>One special character (!@#$%^&*)</li>
                  </ul>
                </div>
              </div>

              <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                  <input 
                    type="password" 
                    class="form-control" 
                    name="confirmPassword" 
                    id="confirmPassword"
                    placeholder="Confirm password"
                    required 
                    autocomplete="new-password"
                  />
                  <i class="fas fa-shield-alt input-icon"></i>
                </div>
              </div>
            </div>

            <!-- Agency Fields -->
            <div id="agencyFields" class="agency-fields" style="display: <%= typeof formData !== 'undefined' && formData.role === 'agency' ? 'block' : 'none' %>;">
              <div class="agency-title">
                <i class="fas fa-building"></i>
                Agency Details
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="agencyName" class="form-label">Agency Name</label>
                  <div class="input-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="agencyName" 
                      id="agencyName"
                      placeholder="Enter agency name"
                      value="<%= typeof formData !== 'undefined' && formData.agencyName ? formData.agencyName : '' %>"
                    />
                    <i class="fas fa-building input-icon"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="agencyAddress" class="form-label">Agency Address</label>
                  <div class="input-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="agencyAddress" 
                      id="agencyAddress"
                      placeholder="Enter agency address"
                      value="<%= typeof formData !== 'undefined' && formData.agencyAddress ? formData.agencyAddress : '' %>"
                    />
                    <i class="fas fa-map-marker-alt input-icon"></i>
                  </div>
                </div>
              </div>

              <div class="form-group full-width">
                <label for="agencyLogo" class="form-label">Agency Logo</label>
                <div class="file-input-wrapper">
                  <input 
                    type="file" 
                    class="form-control" 
                    name="agencyLogo" 
                    id="agencyLogo"
                    accept="image/*" 
                  />
                  <label for="agencyLogo" class="file-input-label">
                    <i class="fas fa-cloud-upload-alt"></i>
                    Choose agency logo (PNG, JPG)
                  </label>
                </div>
              </div>
            </div>

            <button type="submit" class="btn-register">
              <i class="fas fa-rocket" style="margin-right: 0.6rem;"></i>
              Create My Account
            </button>
          </form>

          <div class="login-link">
            Already have an account? <a href="/login">Sign in here</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleAgencyFields() {
      const role = document.getElementById("role");
      const agencyFields = document.getElementById("agencyFields");
      
      if (!role || !agencyFields) {
        console.error('Required elements not found');
        return;
      }
      
      console.log('Current role:', role.value);
      
      if (role.value === "agency") {
        console.log('Showing agency fields');
        agencyFields.style.display = "block";
        // Force reflow to ensure display is applied before adding class
        agencyFields.offsetHeight;
        agencyFields.classList.add("show");
        
        // Make agency fields required
        const agencyInputs = document.querySelectorAll('#agencyFields input[type="text"]');
        agencyInputs.forEach(input => {
          input.setAttribute('required', 'required');
        });
      } else {
        console.log('Hiding agency fields');
        agencyFields.classList.remove("show");
        
        // Remove required attribute and clear values
        const agencyInputs = document.querySelectorAll('#agencyFields input');
        agencyInputs.forEach(input => {
          input.removeAttribute('required');
          if (input.type !== 'file') {
            input.value = '';
          }
        });
        
        // Hide after animation completes
        setTimeout(() => {
          if (!agencyFields.classList.contains('show')) {
            agencyFields.style.display = "none";
          }
        }, 400);
      }
    }

    // File input preview
    document.getElementById('agencyLogo')?.addEventListener('change', function(e) {
      const label = document.querySelector('.file-input-label');
      const fileName = e.target.files[0]?.name;
      if (fileName) {
        label.innerHTML = `<i class="fas fa-check-circle"></i>${fileName}`;
        label.style.color = 'var(--secondary-green)';
        label.style.borderColor = 'var(--secondary-green)';
      }
    });

    // Ensure correct display on load
    window.onload = function() {
      console.log('Page loaded, initializing...');
      
      // Initialize toggle
      toggleAgencyFields();
      
      // Set up role change handler (backup in case inline onchange doesn't work)
      const roleSelect = document.getElementById('role');
      if (roleSelect) {
        roleSelect.addEventListener('change', toggleAgencyFields);
      }
      
      // Show agency fields if there's form data with agency role
      <% if (typeof formData !== 'undefined' && formData.role === 'agency') { %>
        // EJS: Agency role detected, show agency fields on load
        const agencyFields = document.getElementById("agencyFields");
        if (agencyFields) {
          agencyFields.style.display = "block";
          setTimeout(() => agencyFields.classList.add("show"), 10);
        }
      <% } %>
    };

    // Enhanced mobile experience
    document.addEventListener('DOMContentLoaded', function() {
      // Initialize agency fields on page load
      toggleAgencyFields();
      
      // Add smooth scrolling behavior
      document.documentElement.style.scrollBehavior = 'smooth';
      
      // Optimize for mobile keyboards
      const inputs = document.querySelectorAll('input, select');
      inputs.forEach(input => {
        input.addEventListener('focus', function() {
          // Small delay to ensure keyboard is up
          setTimeout(() => {
            this.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }, 300);
        });
      });

      // Form validation feedback
      const form = document.querySelector('form');
      form.addEventListener('submit', function(e) {
        const password = document.getElementById('password').value;
        const confirmPassword = document.getElementById('confirmPassword').value;
        
        if (password !== confirmPassword) {
          e.preventDefault();
          alert('Passwords do not match!');
          return;
        }
        
        // Show loading state
        const submitBtn = document.querySelector('.btn-register');
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin" style="margin-right: 0.6rem;"></i>Creating Account...';
        submitBtn.disabled = true;
      });

      // Phone number formatting
      document.getElementById('phone').addEventListener('input', function(e) {
        let value = e.target.value.replace(/\D/g, '');
        if (value.length > 11) value = value.slice(0, 11);
        e.target.value = value;
      });

      // Real-time password validation
      document.getElementById('password').addEventListener('input', function(e) {
        const password = e.target.value;
        const requirements = document.querySelectorAll('.password-requirements li');
        
        // Reset colors
        requirements.forEach(req => req.style.color = '#666');
        
        // Check requirements
        if (password.length >= 8) requirements[0].style.color = 'var(--secondary-green)';
        if (/[A-Z]/.test(password)) requirements[1].style.color = 'var(--secondary-green)';
        if (/[a-z]/.test(password)) requirements[2].style.color = 'var(--secondary-green)';
        if (/[0-9]/.test(password)) requirements[3].style.color = 'var(--secondary-green)';
        if (/[!@#$%^&*]/.test(password)) requirements[4].style.color = 'var(--secondary-green)';
      });

      // Confirm password validation
      document.getElementById('confirmPassword').addEventListener('input', function(e) {
        const password = document.getElementById('password').value;
        const confirmPassword = e.target.value;
        
        if (confirmPassword && password !== confirmPassword) {
          e.target.style.borderColor = '#e53e3e';
          e.target.style.boxShadow = '0 0 0 3px rgba(229, 62, 62, 0.1)';
        } else {
          e.target.style.borderColor = '#f0f4f8';
          e.target.style.boxShadow = 'none';
        }
      });
    });
  </script>
</body>
</html>