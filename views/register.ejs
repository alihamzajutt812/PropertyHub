<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Register' %></title>
  <link rel="stylesheet" href="/public/css/javascript.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap');
    
    :root {
      --primary-green: #2d5016;
      --secondary-green: #4CAF50;
      --dark-green: #1a3009;
      --light-green: #81c784;
      --gradient-primary: linear-gradient(135deg, #2d5016 0%, #4CAF50 100%);
      --gradient-light: linear-gradient(135deg, rgba(45, 80, 22, 0.1), rgba(76, 175, 80, 0.1));
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: #ffffff;
      position: relative;
      overflow-x: hidden;
      min-height: 100vh;
    }

    /* Animated Background */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: 
        radial-gradient(circle at 20% 30%, rgba(45, 80, 22, 0.03) 0%, transparent 50%),
        radial-gradient(circle at 80% 70%, rgba(76, 175, 80, 0.03) 0%, transparent 50%),
        linear-gradient(45deg, transparent 48%, rgba(45, 80, 22, 0.01) 49%, rgba(45, 80, 22, 0.01) 51%, transparent 52%);
      background-size: 600px 600px, 400px 400px, 30px 30px;
      animation: moveBackground 25s ease-in-out infinite;
      z-index: -1;
    }

    @keyframes moveBackground {
      0%, 100% { transform: translate(0, 0); }
      25% { transform: translate(-5px, -5px); }
      50% { transform: translate(5px, 5px); }
      75% { transform: translate(-3px, 3px); }
    }

    .main-container {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 1rem;
      position: relative;
    }

    .register-wrapper {
      width: 100%;
      max-width: 900px;
      position: relative;
    }

    .register-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      border-radius: 24px;
      padding: 2rem;
      box-shadow: 
        0 20px 40px rgba(45, 80, 22, 0.08),
        0 10px 25px rgba(0, 0, 0, 0.04),
        inset 0 1px 0 rgba(255, 255, 255, 0.9);
      border: 1px solid rgba(255, 255, 255, 0.3);
      position: relative;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .register-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 4px;
      background: var(--gradient-primary);
      border-radius: 24px 24px 0 0;
    }

    .form-header {
      text-align: center;
      margin-bottom: 1.5rem;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 1rem;
    }

    .brand-icon {
      width: 50px;
      height: 50px;
      background: var(--gradient-primary);
      border-radius: 16px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 8px 20px rgba(45, 80, 22, 0.2);
      transition: transform 0.3s ease;
    }

    .brand-icon:hover {
      transform: scale(1.05);
    }

    .brand-icon i {
      font-size: 1.5rem;
      color: white;
    }

    .brand-text {
      text-align: left;
    }

    .brand-title {
      font-size: 1.8rem;
      font-weight: 700;
      background: var(--gradient-primary);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin-bottom: 0.2rem;
      line-height: 1.2;
    }

    .brand-subtitle {
      color: #666;
      font-size: 0.9rem;
      font-weight: 400;
    }

    .form-section {
      position: relative;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem;
      margin-bottom: 1.2rem;
    }

    .form-group {
      position: relative;
    }

    .form-group.full-width {
      grid-column: 1 / -1;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: var(--primary-green);
      margin-bottom: 0.5rem;
      font-size: 0.9rem;
      letter-spacing: 0.3px;
    }

    .input-group {
      position: relative;
      display: flex;
      align-items: center;
    }

    .input-icon {
      position: absolute;
      left: 1rem;
      top: 50%;
      transform: translateY(-50%);
      color: #999;
      font-size: 1rem;
      z-index: 3;
      transition: all 0.3s ease;
    }

    .form-control,
    .form-select {
      width: 100%;
      padding: 1rem 1rem 1rem 2.8rem;
      border: 2px solid #f0f4f8;
      border-radius: 12px;
      font-size: 0.95rem;
      background: rgba(255, 255, 255, 0.8);
      backdrop-filter: blur(10px);
      transition: all 0.3s ease;
      outline: none;
      color: #333;
      font-weight: 500;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: var(--secondary-green);
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 0 0 3px rgba(76, 175, 80, 0.1);
      transform: translateY(-1px);
    }

    .form-control:focus + .input-icon,
    .form-select:focus + .input-icon {
      color: var(--secondary-green);
      transform: translateY(-50%) scale(1.05);
    }

    .form-control::placeholder {
      color: #aaa;
      font-weight: 400;
    }

    .btn-register {
      width: 100%;
      padding: 1.1rem;
      background: var(--gradient-primary);
      border: none;
      border-radius: 12px;
      color: white;
      font-weight: 600;
      font-size: 1rem;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
      margin: 1.5rem 0 1rem;
      box-shadow: 0 6px 20px rgba(45, 80, 22, 0.25);
      letter-spacing: 0.3px;
    }

    .btn-register::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
      transition: left 0.5s ease;
    }

    .btn-register:hover {
      transform: translateY(-2px);
      box-shadow: 0 10px 30px rgba(45, 80, 22, 0.35);
    }

    .btn-register:hover::before {
      left: 100%;
    }

    .agency-fields {
      background: linear-gradient(135deg, rgba(45, 80, 22, 0.02), rgba(76, 175, 80, 0.02));
      border: 2px solid rgba(76, 175, 80, 0.1);
      border-radius: 16px;
      padding: 1.5rem;
      margin: 1.5rem 0;
      position: relative;
      overflow: hidden;
      transition: all 0.4s ease;
    }

    .agency-fields::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: var(--gradient-primary);
      border-radius: 16px 16px 0 0;
    }

    .agency-fields.show {
      animation: slideInUp 0.4s ease;
    }

    @keyframes slideInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .agency-title {
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--primary-green);
      margin-bottom: 1rem;
      display: flex;
      align-items: center;
    }

    .agency-title i {
      margin-right: 0.6rem;
      font-size: 1.2rem;
      color: var(--secondary-green);
    }

    .login-link {
      text-align: center;
      color: #666;
      font-size: 0.9rem;
      font-weight: 500;
    }

    .login-link a {
      color: var(--primary-green);
      text-decoration: none;
      font-weight: 600;
      position: relative;
      transition: all 0.3s ease;
    }

    .login-link a::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: var(--gradient-primary);
      transition: width 0.3s ease;
    }

    .login-link a:hover::after {
      width: 100%;
    }

    .login-link a:hover {
      color: var(--secondary-green);
    }

    .alert-danger {
      background: linear-gradient(135deg, #fff5f5, #fed7d7);
      border: 2px solid #feb2b2;
      border-radius: 12px;
      color: #c53030;
      padding: 1rem;
      margin-bottom: 1.2rem;
      border-left: 4px solid #e53e3e;
      font-size: 0.9rem;
    }

    .alert-danger i {
      margin-right: 0.6rem;
      font-size: 1rem;
    }

    /* File input custom styling */
    .file-input-wrapper {
      position: relative;
      overflow: hidden;
      display: inline-block;
      width: 100%;
    }

    .form-control[type="file"] {
      position: absolute;
      left: -9999px;
    }

    .file-input-label {
      display: flex;
      align-items: center;
      padding: 1rem;
      border: 2px dashed #ddd;
      border-radius: 12px;
      background: rgba(255, 255, 255, 0.8);
      cursor: pointer;
      transition: all 0.3s ease;
      color: #666;
      font-weight: 500;
      font-size: 0.9rem;
    }

    .file-input-label:hover {
      border-color: var(--secondary-green);
      background: rgba(76, 175, 80, 0.05);
      color: var(--primary-green);
    }

    .file-input-label i {
      margin-right: 0.6rem;
      font-size: 1.1rem;
      color: var(--secondary-green);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .main-container {
        padding: 0.5rem;
      }
      
      .register-card {
        padding: 1.5rem;
        border-radius: 20px;
      }
      
      .form-row {
        grid-template-columns: 1fr;
        gap: 1rem;
      }
      
      .form-header {
        flex-direction: column;
        gap: 0.8rem;
        margin-bottom: 1.2rem;
      }
      
      .brand-text {
        text-align: center;
      }
      
      .brand-title {
        font-size: 1.6rem;
      }
      
      .agency-fields {
        padding: 1.2rem;
      }
    }

    @media (max-width: 480px) {
      .register-card {
        padding: 1.2rem;
        margin: 0.5rem;
      }
      
      .brand-icon {
        width: 45px;
        height: 45px;
      }
      
      .brand-icon i {
        font-size: 1.3rem;
      }
      
      .brand-title {
        font-size: 1.5rem;
      }
      
      .form-control,
      .form-select {
        padding: 0.9rem 0.9rem 0.9rem 2.5rem;
        font-size: 0.9rem;
      }
      
      .input-icon {
        left: 0.8rem;
        font-size: 0.9rem;
      }
      
      .btn-register {
        padding: 1rem;
        font-size: 0.95rem;
      }
    }

    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }

    .btn-register:focus,
    .form-control:focus,
    .form-select:focus {
      outline: 2px solid rgba(76, 175, 80, 0.5);
      outline-offset: 2px;
    }
  </style>
</head>
<body>
  <div class="main-container">
    <div class="register-wrapper">
      <div class="register-card">
        <div class="form-header">
          <div class="brand-icon">
            <i class="fas fa-user-plus"></i>
          </div>
          <div class="brand-text">
            <h1 class="brand-title">Join Us Today</h1>
            <p class="brand-subtitle">Create your real estate account</p>
          </div>
        </div>

        <% if (typeof error !== 'undefined') { %>
          <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i><%= error %>
          </div>
        <% } %>

        <div class="form-section">
          <form method="POST" action="/register" enctype="multipart/form-data">
            <div class="form-row">
              <div class="form-group">
                <label for="name" class="form-label">Full Name</label>
                <div class="input-group">
                  <input 
                    type="text" 
                    class="form-control" 
                    name="name" 
                    id="name"
                    placeholder="Enter your full name"
                    required 
                    autocomplete="name"
                  />
                  <i class="fas fa-user input-icon"></i>
                </div>
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <div class="input-group">
                  <input 
                    type="email" 
                    class="form-control" 
                    name="email" 
                    id="email"
                    placeholder="Enter your email"
                    required 
                    autocomplete="email"
                  />
                  <i class="fas fa-envelope input-icon"></i>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="phone" class="form-label">Phone Number</label>
                <div class="input-group">
                  <input 
                    type="text" 
                    class="form-control" 
                    name="phone" 
                    id="phone"
                    placeholder="Enter phone number"
                    required 
                    autocomplete="tel"
                  />
                  <i class="fas fa-phone input-icon"></i>
                </div>
              </div>

              <div class="form-group">
                <label for="role" class="form-label">Account Type</label>
                <div class="input-group">
                  <select name="role" class="form-select" id="role" required onchange="toggleAgencyFields()">
                    <option value="agent" selected>Real Estate Agent</option>
                    <option value="agency">Real Estate Agency</option>
                  </select>
                  <i class="fas fa-briefcase input-icon"></i>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <div class="input-group">
                  <input 
                    type="password" 
                    class="form-control" 
                    name="password" 
                    id="password"
                    placeholder="Create password"
                    required 
                    autocomplete="new-password"
                  />
                  <i class="fas fa-lock input-icon"></i>
                </div>
              </div>

              <div class="form-group">
                <label for="confirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                  <input 
                    type="password" 
                    class="form-control" 
                    name="confirmPassword" 
                    id="confirmPassword"
                    placeholder="Confirm password"
                    required 
                    autocomplete="new-password"
                  />
                  <i class="fas fa-shield-alt input-icon"></i>
                </div>
              </div>
            </div>

            <!-- Agency Fields -->
            <div id="agencyFields" class="agency-fields" style="display: none;">
              <div class="agency-title">
                <i class="fas fa-building"></i>
                Agency Details
              </div>
              
              <div class="form-row">
                <div class="form-group">
                  <label for="agencyName" class="form-label">Agency Name</label>
                  <div class="input-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="agencyName" 
                      id="agencyName"
                      placeholder="Enter agency name"
                    />
                    <i class="fas fa-building input-icon"></i>
                  </div>
                </div>

                <div class="form-group">
                  <label for="agencyAddress" class="form-label">Agency Address</label>
                  <div class="input-group">
                    <input 
                      type="text" 
                      class="form-control" 
                      name="agencyAddress" 
                      id="agencyAddress"
                      placeholder="Enter agency address"
                    />
                    <i class="fas fa-map-marker-alt input-icon"></i>
                  </div>
                </div>
              </div>

              <div class="form-group full-width">
                <label for="agencyLogo" class="form-label">Agency Logo</label>
                <div class="file-input-wrapper">
                  <input 
                    type="file" 
                    class="form-control" 
                    name="agencyLogo" 
                    id="agencyLogo"
                    accept="image/*" 
                  />
                  <label for="agencyLogo" class="file-input-label">
                    <i class="fas fa-cloud-upload-alt"></i>
                    Choose agency logo (PNG, JPG)
                  </label>
                </div>
              </div>
            </div>

            <button type="submit" class="btn-register">
              <i class="fas fa-rocket" style="margin-right: 0.6rem;"></i>
              Create My Account
            </button>
          </form>

          <div class="login-link">
            Already have an account? <a href="/login">Sign in here</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    function toggleAgencyFields() {
      const role = document.getElementById("role").value;
      const agencyFields = document.getElementById("agencyFields");
      
      if (role === "agency") {
        agencyFields.style.display = "block";
        setTimeout(() => agencyFields.classList.add("show"), 10);
      } else {
        agencyFields.classList.remove("show");
        setTimeout(() => agencyFields.style.display = "none", 300);
      }
    }

    // File input preview
    document.getElementById('agencyLogo')?.addEventListener('change', function(e) {
      const label = document.querySelector('.file-input-label');
      const fileName = e.target.files[0]?.name;
      if (fileName) {
        label.innerHTML = `<i class="fas fa-check-circle"></i>${fileName}`;
        label.style.color = 'var(--secondary-green)';
        label.style.borderColor = 'var(--secondary-green)';
      }
    });

    // Ensure correct display on load
    window.onload = toggleAgencyFields;
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>