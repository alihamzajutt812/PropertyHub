<style>
    /* Header-specific styles - Add this to your main CSS or in a <style> tag */
    .auth-container {
        display: flex;
        align-items: center;
        gap: 0.5rem; /* Reduced gap */
    }

    .navbar {
        background: linear-gradient(135deg, #2d5016 0%, #1a3009 100%);
        padding: 0;
        margin-bottom: 1px;
        width: 100%;
        z-index: 1000;
        box-shadow: 0 4px 20px rgba(45, 80, 22, 0.15);
        position: relative;
        transition: all 0.3s ease;
    }

    .nav-container {
        max-width:100%;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 1.5rem; /* Reduced padding */
        position: relative;
    }

    .logo {
        color: white;
        font-size: 1.6rem; /* Slightly reduced */
        font-weight: 700;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 0.4rem; /* Reduced gap */
        transition: transform 0.3s ease;
    }

    .logo:hover {
        transform: scale(1.05);
    }

    .logo i {
        font-size: 1.7rem; /* Reduced icon size */
        color: #4CAF50;
    }

    .nav-menu {
        display: flex;
        list-style: none;
        gap: 1.5rem; /* Reduced gap */
        align-items: center;
    }

    .nav-menu li {
        position: relative;
    }

    .nav-menu a {
        color: white;
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9rem; /* Reduced font size */
        padding: 0.4rem 0.8rem; /* Reduced padding */
        border-radius: 20px; /* Slightly smaller border radius */
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        white-space: nowrap;
    }

    .nav-menu a i {
        font-size: 0.8rem; /* Smaller icons in nav */
        margin-right: 0.3rem;
    }

    .nav-menu a:hover {
        color: #4CAF50;
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-2px);
    }

    .user-info {
        color: white;
        display: flex;
        align-items: center;
        gap: 0.5rem; /* Reduced gap */
        font-weight: 500;
    }

    .welcome-text {
        display: flex;
        align-items: center;
        gap: 0.3rem; /* Reduced gap */
        background: rgba(255, 255, 255, 0.1);
        padding: 0.4rem 0.8rem; /* Reduced padding */
        border-radius: 20px;
        backdrop-filter: blur(10px);
        white-space: nowrap;
        font-size: 0.85rem; /* Smaller font */
        max-width: 150px; /* Limit width */
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .welcome-text i {
        font-size: 0.75rem; /* Smaller icon */
        flex-shrink: 0;
    }

    /* Compact button styles */
    .logout-btn, .auth-btn {
        background: linear-gradient(135deg, #4CAF50, #45a049);
        color: white;
        padding: 0.4rem 0.7rem; /* Much smaller padding */
        border: none;
        border-radius: 18px; /* Smaller border radius */
        cursor: pointer;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.75rem; /* Smaller font */
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(76, 175, 80, 0.25);
        position: relative;
        overflow: hidden;
        white-space: nowrap;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem; /* Smaller gap */
        min-width: auto;
    }

    .logout-btn i, .auth-btn i {
        font-size: 0.7rem; /* Much smaller icons */
        flex-shrink: 0;
    }

    /* Hide text on very small screens, show only icons */
    @media (max-width: 1200px) {
        .logout-btn span, .auth-btn span {
            display: none;
        }
        
        .logout-btn, .auth-btn {
            min-width: 32px;
            padding: 0.4rem;
            justify-content: center;
        }
    }

    .logout-btn::before, .auth-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s;
    }

    .logout-btn:hover::before, .auth-btn:hover::before {
        left: 100%;
    }

    .logout-btn:hover, .auth-btn:hover {
        background: linear-gradient(135deg, #45a049, #3d8b40);
        transform: translateY(-2px);
        box-shadow: 0 3px 12px rgba(76, 175, 80, 0.35);
    }

    .mobile-menu-toggle {
        display: none;
        background: none;
        border: none;
        color: white;
        font-size: 1.3rem; /* Reduced size */
        cursor: pointer;
        padding: 0.4rem;
        border-radius: 8px;
        transition: all 0.3s ease;
        position: relative;
        width: 40px; /* Smaller */
        height: 40px;
        align-items: center;
        justify-content: center;
    }

    .mobile-menu-toggle:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: scale(1.1);
    }

    .hamburger {
        width: 22px; /* Smaller */
        height: 18px;
        position: relative;
        transform: rotate(0deg);
        transition: 0.3s ease-in-out;
        cursor: pointer;
    }

    .hamburger span {
        display: block;
        position: absolute;
        height: 2.5px; /* Thinner lines */
        width: 100%;
        background: white;
        border-radius: 3px;
        opacity: 1;
        left: 0;
        transform: rotate(0deg);
        transition: 0.25s ease-in-out;
    }

    .hamburger span:nth-child(1) {
        top: 0px;
    }

    .hamburger span:nth-child(2),
    .hamburger span:nth-child(3) {
        top: 7px;
    }

    .hamburger span:nth-child(4) {
        top: 14px;
    }

    .hamburger.active span:nth-child(1) {
        top: 7px;
        width: 0%;
        left: 50%;
    }

    .hamburger.active span:nth-child(2) {
        transform: rotate(45deg);
    }

    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg);
    }

    .hamburger.active span:nth-child(4) {
        top: 7px;
        width: 0%;
        left: 50%;
    }

    /* Responsive breakpoints */
    @media (max-width: 1024px) {
        .nav-container {
            padding: 0.8rem 1rem;
        }
        
        .nav-menu {
            gap: 1rem;
        }
        
        .auth-container {
            gap: 0.3rem;
        }
        
        .welcome-text {
            max-width: 120px;
            font-size: 0.8rem;
        }
    }

    @media (max-width: 768px) {
        .nav-container {
            padding: 1rem 1.5rem;
        }

