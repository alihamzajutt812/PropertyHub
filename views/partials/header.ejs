            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            font-size: 1.1rem;
            text-align: left;
            transition: all 0.3s ease;
        }

        .nav-menu a i {
            font-size: 1rem;
            margin-right: 0.5rem;
        }

        .nav-menu a:hover {
            background: rgba(76, 175, 80, 0.2);
            border-color: #4CAF50;
            box-shadow: 0 4px 15px rgba(76, 175, 80, 0.2);
        }

        .mobile-menu-toggle {
            display: flex;
            z-index: 1001;
        }

        .user-info {
            display: none;
