            background: linear-gradient(135deg, #2d5016 0%, #1a3009 100%);
            flex-direction: column;
            padding: 1.5rem;
            gap: 1rem;
            transition: right 0.4s ease;
            box-shadow: -5px 5px 20px rgba(0, 0, 0, 0.3);
            border-radius: 0 0 0 20px;
            backdrop-filter: blur(20px);
        }

        .user-info.active {
            display: flex;
            right: 0;
        }

        .user-info .welcome-text {
            justify-content: center;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            font-size: 1rem;
            max-width: none;
        }

        .user-info .logout-btn, .user-info .auth-btn {
            width: 100%;
            padding: 1rem;
            text-align: center;
            font-size: 1rem;
            margin-bottom: 0.5rem;
            justify-content: center;
        }

        .user-info .logout-btn span, .user-info .auth-btn span {
            display: inline; /* Show text in mobile menu */
        }

        .user-info .logout-btn i, .user-info .auth-btn i {
            font-size: 1rem;
            margin-right: 0.5rem;
        }

        .mobile-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(5px);
            z-index: 999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.4s ease;
        }

        .mobile-overlay.active {
            opacity: 1;
            visibility: visible;
        }
        
        .desktop-auth {
            display: none;
        }
    }

    @media (min-width: 769px) {
        .mobile-auth {
            display: none;
        }
    }

    @keyframes slideInRight {
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    @media (max-width: 480px) {
        .nav-container {
            padding: 1rem;
        }

        .logo {
            font-size: 1.2rem;
        }

        .nav-menu {
            max-width: 100%;
            padding: 1.5rem 1rem;
        }

        .user-info {
            max-width: 100%;
            padding: 1rem;
        }
    }
</style>

