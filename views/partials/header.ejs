<script>
    let mobileMenuOpen = false;

    function toggleMobileMenu() {
        const navMenu = document.getElementById('navMenu');
        const userInfo = document.getElementById('userInfo');
        const hamburger = document.getElementById('hamburger');
        const overlay = document.querySelector('.mobile-overlay');
        
        mobileMenuOpen = !mobileMenuOpen;
        
        if (mobileMenuOpen) {
            navMenu.classList.add('active');
            userInfo.classList.add('active');
            hamburger.classList.add('active');
            overlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        } else {
            navMenu.classList.remove('active');
            userInfo.classList.remove('active');
            hamburger.classList.remove('active');
            overlay.classList.remove('active');
            document.body.style.overflow = '';
        }
    }

    function closeMobileMenu() {
        if (mobileMenuOpen) {
            toggleMobileMenu();
        }
    }

    document.querySelectorAll('.nav-menu a, .user-info a').forEach(link => {
        link.addEventListener('click', closeMobileMenu);
    });

    window.addEventListener('scroll', () => {
        const navbar = document.querySelector('.navbar');
        if (!navbar) return;
        
        if (window.scrollY > 100) {
            navbar.style.background = 'linear-gradient(135deg, rgba(45, 80, 22, 0.95) 0%, rgba(26, 48, 9, 0.95) 100%)';
            navbar.style.backdropFilter = 'blur(20px)';
            navbar.style.boxShadow = '0 8px 30px rgba(45, 80, 22, 0.3)';
        } else {
            navbar.style.background = 'linear-gradient(135deg, #2d5016 0%, #1a3009 100%)';
            navbar.style.backdropFilter = 'none';
            navbar.style.boxShadow = '0 4px 20px rgba(45, 80, 22, 0.15)';
        }
    });

    window.addEventListener('resize', () => {
        if (window.innerWidth > 768 && mobileMenuOpen) {
            closeMobileMenu();
        }
    });

    window.addEventListener('touchmove', (e) => {
        if (mobileMenuOpen && !e.target.closest('.nav-menu, .user-info')) {
            e.preventDefault();
        }
    }, { passive: false });
</script>