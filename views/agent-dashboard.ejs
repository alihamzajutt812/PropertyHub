<!DOCTYPE html>
<html>
<head>
  <title><%= pageTitle %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    :root {
      --primary-green: #22c55e;
      --dark-green: #16a34a;
      --light-green: #dcfce7;
      --emerald: #10b981;
      --sage: #84cc16;
      --mint: #f0fdf4;
      --forest: #065f46;
    }

    body {
      background: linear-gradient(135deg, var(--mint) 0%, var(--light-green) 50%, #e6fffa 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      position: relative;
    }

    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(circle at 20% 80%, rgba(34, 197, 94, 0.05) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(16, 185, 129, 0.05) 0%, transparent 50%);
      pointer-events: none;
      z-index: -1;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    h2 {
      color: var(--forest);
      font-weight: 700;
      margin-bottom: 30px;
      font-size: 2.5rem;
      text-shadow: 0 2px 4px rgba(34, 197, 94, 0.1);
      background: linear-gradient(135deg, var(--dark-green), var(--emerald));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    h4 {
      color: var(--dark-green);
      font-weight: 600;
      margin: 30px 0 20px 0;
      font-size: 1.5rem;
      position: relative;
      padding-left: 15px;
    }

    h4::before {
      content: '';
      position: absolute;
      left: 0;
      top: 50%;
      transform: translateY(-50%);
      width: 4px;
      height: 25px;
      background: linear-gradient(135deg, var(--primary-green), var(--emerald));
      border-radius: 2px;
    }

    .btn {
      border-radius: 12px;
      font-weight: 600;
      transition: all 0.3s ease;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      border: 2px solid transparent;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
      background: linear-gradient(135deg, var(--primary-green), var(--emerald));
      border-color: var(--primary-green);
      color: white;
      padding: 12px 24px;
      font-size: 16px;
      box-shadow: 0 6px 20px rgba(34, 197, 94, 0.3);
    }

    .btn-success:hover {
      background: linear-gradient(135deg, var(--dark-green), var(--primary-green));
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(34, 197, 94, 0.4);
    }

    .btn-primary {
      background: linear-gradient(135deg, #3b82f6, #1d4ed8);
      border-color: #3b82f6;
      color: white;
    }

    .btn-primary:hover {
      background: linear-gradient(135deg, #1d4ed8, #1e40af);
      transform: translateY(-2px);
    }

    .btn-danger {
      background: linear-gradient(135deg, #ef4444, #dc2626);
      border-color: #ef4444;
      color: white;
    }

    .btn-danger:hover {
      background: linear-gradient(135deg, #dc2626, #b91c1c);
      transform: translateY(-2px);
    }

    .table-container {
      background: white;
      border-radius: 20px;
      box-shadow: 0 20px 40px rgba(34, 197, 94, 0.1);
      overflow: hidden;
      border: 2px solid var(--light-green);
      position: relative;
    }

    .table-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 5px;
      background: linear-gradient(90deg, var(--primary-green), var(--emerald), var(--sage));
    }

    .table {
      margin: 0;
      border-collapse: separate;
      border-spacing: 0;
    }

    .table thead th {
      background: linear-gradient(135deg, var(--light-green), #f0fdf4);
      color: var(--forest);
      font-weight: 700;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 20px 15px;
      font-size: 14px;
      border: none;
      position: relative;
    }

    .table tbody tr {
      transition: all 0.3s ease;
      border-bottom: 1px solid #f3f4f6;
    }

    .table tbody tr:hover {
      background: linear-gradient(135deg, #fefffe, var(--mint));
      transform: translateX(5px);
      box-shadow: 0 4px 15px rgba(34, 197, 94, 0.1);
    }

    .table tbody td {
      padding: 18px 15px;
      vertical-align: middle;
      border: none;
      color: #374151;
      font-weight: 500;
    }

    .table tbody tr:last-child {
      border-bottom: none;
    }

    .action-buttons {
      display: flex;
      gap: 8px;
      align-items: center;
      flex-wrap: wrap;
    }

    .btn-sm {
      padding: 8px 16px;
      font-size: 13px;
      border-radius: 8px;
      min-width: 70px;
    }

    .price-cell {
      font-weight: 700;
      color: var(--dark-green);
      font-size: 16px;
    }

    .add-property-section {
      background: white;
      border-radius: 15px;
      padding: 25px;
      margin-bottom: 30px;
      box-shadow: 0 10px 25px rgba(34, 197, 94, 0.08);
      border: 2px solid var(--light-green);
      text-align: center;
    }

    .welcome-section {
      background: white;
      border-radius: 20px;
      padding: 30px;
      margin-bottom: 30px;
      box-shadow: 0 15px 35px rgba(34, 197, 94, 0.1);
      border: 2px solid var(--light-green);
      position: relative;
      overflow: hidden;
    }

    .welcome-section::after {
      content: 'üè†';
      position: absolute;
      top: 20px;
      right: 30px;
      font-size: 3rem;
      opacity: 0.1;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .container {
        padding: 15px;
      }

      h2 {
        font-size: 2rem;
        text-align: center;
      }

      h4 {
        font-size: 1.3rem;
      }

      .table-container {
        border-radius: 15px;
        overflow-x: auto;
      }

      .table {
        min-width: 600px;
      }

      .table thead th,
      .table tbody td {
        padding: 12px 8px;
        font-size: 14px;
      }

      .action-buttons {
        flex-direction: column;
        gap: 5px;
        min-width: 120px;
      }

      .btn-sm {
        width: 100%;
        margin: 2px 0;
      }

      .add-property-section {
        padding: 20px;
      }

      .welcome-section {
        padding: 25px;
        text-align: center;
      }

      .welcome-section::after {
        display: none;
      }
    }

    @media (max-width: 480px) {
      h2 {
        font-size: 1.8rem;
      }

      .table thead th,
      .table tbody td {
        padding: 10px 6px;
        font-size: 13px;
      }

      .table {
        min-width: 550px;
      }

      .btn-success {
        width: 100%;
        margin: 10px 0;
      }
    }

    /* Loading animation for table rows */
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .table tbody tr {
      animation: fadeInUp 0.6s ease forwards;
    }

    .table tbody tr:nth-child(even) {
      animation-delay: 0.1s;
    }

    .table tbody tr:nth-child(odd) {
      animation-delay: 0.2s;
    }

    /* Focus indicators */
    .btn:focus-visible {
      outline: 3px solid var(--primary-green);
      outline-offset: 2px;
    }

    /* High contrast mode support */
    @media (prefers-contrast: high) {
      .table-container,
      .welcome-section,
      .add-property-section {
        border: 3px solid var(--dark-green);
      }
    }

    /* Reduced motion support */
    @media (prefers-reduced-motion: reduce) {
      * {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
      }
    }

    /* Empty state styling */
    .empty-state {
      text-align: center;
      padding: 60px 20px;
      color: #6b7280;
    }

    .empty-state h5 {
      color: var(--dark-green);
      margin-bottom: 15px;
    }
  </style>
</head>
<body class="p-4">
  <div class="container">
    <div class="welcome-section">
      <h2>Welcome <%= user.name %></h2>
    </div>

    <div class="add-property-section">
      <a href="/agent/properties/new" class="btn btn-success mb-3">Add New Property</a>
    </div>

    <h4>My Properties</h4>
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Type</th>
            <th>Location</th>
            <th>Price</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% properties.forEach(p => { %>
            <tr>
              <td><%= p.title %></td>
              <td><%= p.type %></td>
              <td><%= p.location %></td>
              <td class="price-cell">Rs. <%= p.price %></td>
              <td>
                <div class="action-buttons">
                  <a href="/agent/properties/edit/<%= p._id %>" class="btn btn-sm btn-primary">Edit</a>
                  <form action="/agent/properties/delete/<%= p._id %>" method="POST" style="display:inline;">
                    <button class="btn btn-sm btn-danger" onclick="return confirm('Delete?')">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>